generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  password     String
  name         String
  surname      String
  imageUrl     String?
  bio          String?      @db.Text
  createdAt    DateTime     @default(now())
  posts        Post[]
  comments     Comment[]
  likes        PostLike[]
  connectionsA Connection[] @relation("UserA")
  connectionsB Connection[] @relation("UserB")
}

model Post {
  id        String     @id @default(uuid())
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])
  text      String     @db.Text
  imageUrl  String?
  createdAt DateTime   @default(now())
  likes     PostLike[]
  comments  Comment[]
}

model PostLike {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
}

model Comment {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  text      String   @db.Text
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Connection {
  id        String           @id @default(uuid())
  userAId   String
  userBId   String
  status    ConnectionStatus @default(PENDING)
  createdAt DateTime         @default(now())
  userA     User             @relation("UserA", fields: [userAId], references: [id])
  userB     User             @relation("UserB", fields: [userBId], references: [id])

  @@unique([userAId, userBId])
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
}
